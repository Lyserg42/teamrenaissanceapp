<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Largeur et couleur de la ligne de bord -->
    <stroke
        android:width="1px"
        android:color="#1cc4ad" />
    <!-- dedans, une variete de couleurs peut etre modifie automatiquement -->
    <gradient
        android:angle="270"
        android:centerColor="#ffffff"
        android:endColor="#ffffff"
        android:startColor="#ffffff" />

    <!-- Definir le rembourrage-->
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />
</shape>